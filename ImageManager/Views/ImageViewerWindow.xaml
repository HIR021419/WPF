<Window x:Class="ImageManager.Views.ImageViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageManager.Converters"
        Title="Image Viewer"
        WindowState="Maximized"
        WindowStyle="None"
        Background="Black"
        xmlns:Behaviours="clr-namespace:ImageManager">
    <Window.Resources>
        <local:ImageConverter x:Key="ImageConverter"/>
        <Style x:Key="StyleMainGrid">
            <Style.Triggers>
                <DataTrigger  Binding="{Binding CloseSignal}" Value="true">
                    <Setter Property="Behaviours:WindowCloseBehaviour.Close" Value="true"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Style="{StaticResource StyleMainGrid}">
        <Image x:Name="FullImage"
               Source="{Binding CurrentImage.Path, Converter={StaticResource ImageConverter}}"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Opacity="1"/>
        <Button x:Name="SlideshowButton"
                Content="Exit"
                Width="80"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="20"
                Command="{Binding ExitCommand}"/>
    </Grid>
</Window>
