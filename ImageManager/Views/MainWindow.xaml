<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageManager"
        mc:Ignorable="d"
        Title="ImageManager" Height="700" Width="1000">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="6">
            <Button Content="Importer dossier" Click="OnImportClick"/>
            <TextBox x:Name="SearchBox" Width="200" Margin="6,0"/>
            <ComboBox x:Name="SortCombo" Width="150" Margin="6,0">
                <ComboBoxItem Content="Name"/>
                <ComboBoxItem Content="Date"/>
                <ComboBoxItem Content="Size"/>
            </ComboBox>
            <ToggleButton x:Name="AscToggle" Content="Asc" Margin="6,0"/>
        </StackPanel>

        <ScrollViewer>
            <ItemsControl x:Name="ThumbnailsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="4" BorderBrush="Gray" BorderThickness="1" Padding="2">
                            <Image Width="180" Height="120" Source="{Binding Thumbnail}" MouseLeftButtonDown="OnThumbnailDoubleClick"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Window>
