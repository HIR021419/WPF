<Window x:Class="ImageManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageManager.Converters"
        xmlns:Behaviours="clr-namespace:ImageManager"
        mc:Ignorable="d"
        Title="ImageManager" Height="700" Width="1000">

    <Window.Resources>
        <local:ImageConverter x:Key="ImageConverter"/>

        <!-- Style principal de la fenêtre -->
        <Style TargetType="Window" x:Key="MainWindowStyle">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Style du DockPanel principal -->
        <Style x:Key="StyleMainGrid" TargetType="DockPanel">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="LastChildFill" Value="True"/>
            <Setter Property="Background" Value="#252526"/>
            <Style.Triggers>
                <!-- Trigger pour fermer la fenêtre -->
                <DataTrigger Binding="{Binding CloseSignal}" Value="true">
                    <Setter Property="Behaviours:WindowCloseBehaviour.Close" Value="true"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>


        <!-- Style des boutons -->
        <Style TargetType="Button" x:Key="PrimaryButtonStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style du TextBox -->
        <Style TargetType="TextBox" x:Key="SearchBoxStyle">
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#3C3C3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="6"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style du ComboBox -->
        <Style TargetType="ComboBox" x:Key="SortComboStyle">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#3C3C3C"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Style du ToggleButton -->
        <Style TargetType="ToggleButton" x:Key="AscToggleStyle" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#3A3D41"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style du ListBox -->
        <Style TargetType="ListBox" x:Key="ThumbnailListBoxStyle">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <!-- Style de l’image miniature -->
        <DataTemplate x:Key="dtListImage">
            <Border Margin="4" BorderBrush="#3C3C3C" BorderThickness="1" Padding="2" CornerRadius="4">
                <Image Width="120" Height="120"
                       Stretch="UniformToFill"
                       Source="{Binding Path, Converter={StaticResource ImageConverter}}">
                </Image>
            </Border>
        </DataTemplate>

        <!-- Panel pour les miniatures -->
        <ItemsPanelTemplate x:Key="dtListImagePanel">
            <WrapPanel IsItemsHost="True" />
        </ItemsPanelTemplate>

    </Window.Resources>

    <!-- === STRUCTURE DE LA FENÊTRE === -->
    <DockPanel Style="{StaticResource StyleMainGrid}">
        <!-- BARRE SUPÉRIEURE -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,10,10,0">
            <TextBox x:Name="SearchBox"
                     Style="{StaticResource SearchBoxStyle}"
                     Text="{Binding SearchPattern, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
            <Button Content="🔍"
                    Command="{Binding SearchCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="30"/>
            <Button Content="Importer des images"
                    Command="{Binding ImportCommand}"
                    Style="{StaticResource PrimaryButtonStyle}" Width="150"/>
            <ComboBox x:Name="SortCombo" Style="{StaticResource SortComboStyle}"
                      SelectedValuePath="Content"
                      SelectedValue="{Binding SelectedSortOption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ComboBoxItem Content="Name"/>
                <ComboBoxItem Content="Date"/>
                <ComboBoxItem Content="Size"/>
            </ComboBox>
            <ComboBox x:Name="FilterCombo" Style="{StaticResource SortComboStyle}"
                      SelectedValuePath="Content"
                      SelectedValue="{Binding SelectedFilterOption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ComboBoxItem Content="All"/>
                <ComboBoxItem Content="Jpg"/>
                <ComboBoxItem Content="Png"/>
                <ComboBoxItem Content="Bmp"/>
            </ComboBox>
            <Button x:Name="AscToggle" 
                          Content="{Binding SortDirectionText}"
                          Command="{Binding SortCommand}"
                          Style="{StaticResource PrimaryButtonStyle}" Width="60"/>
        </StackPanel>

        <!-- CONTENU PRINCIPAL -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Liste des miniatures -->
            <ListBox x:Name="ThumbnailsControl"
                 Grid.Column="0"
                 Style="{StaticResource ThumbnailListBoxStyle}"
                 ItemsSource="{Binding Images, UpdateSourceTrigger=PropertyChanged}"
                 SelectedItem="{Binding SelectedImage, Mode=TwoWay}"
                 ItemTemplate="{StaticResource dtListImage}"
                 ItemsPanel="{StaticResource dtListImagePanel}"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Background" Value="#2A2A2A"/>
                        <Setter Property="Width" Value="3"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ScrollBar">
                                    <Grid Background="{TemplateBinding Background}">
                                        <Track Name="PART_Track" IsDirectionReversed="True">
                                            <Track.DecreaseRepeatButton>
                                                <RepeatButton Command="ScrollBar.LineUpCommand" Height="0"/>
                                            </Track.DecreaseRepeatButton>
                                            <Track.Thumb>
                                                <Thumb>
                                                    <Thumb.Template>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Border Background="White" 
                                                CornerRadius="4"
                                                BorderThickness="0"/>
                                                        </ControlTemplate>
                                                    </Thumb.Template>
                                                </Thumb>
                                            </Track.Thumb>
                                            <Track.IncreaseRepeatButton>
                                                <RepeatButton Command="ScrollBar.LineDownCommand" Height="0"/>
                                            </Track.IncreaseRepeatButton>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.Resources>
            </ListBox>

            <!-- Zone d’aperçu -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="6">
                <Image Width="480" Height="480" Stretch="Uniform"
           Source="{Binding SelectedImage.Path, Converter={StaticResource ImageConverter}, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Ligne de boutons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="View Fullscreen"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding ViewImageCommand}"
                            Margin="4,0"
                            Width="100"
                            />

                    <Button Content="Rotate"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding RotateCommand}"
                            Margin="4,0"
                            Width="100"/>

                    <Button Content="Delete"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding DeleteImageCommand}"
                            Margin="4,0"
                             Width="100"
                            />
                </StackPanel>
                <!-- Tags -->
                <Border Background="#2D2D30"
        CornerRadius="6"
        Padding="10"
        Margin="10,20,10,0"
        BorderThickness="1"
        BorderBrush="#3C3C3C">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.25" BlurRadius="10" ShadowDepth="2"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="Tags"
               FontWeight="SemiBold"
               FontSize="14"
               Foreground="White"
               Margin="0,0,0,8"/>

                        <DockPanel LastChildFill="False">
                            <TextBox Width="200"
               Margin="0,0,8,0"
               Style="{StaticResource SearchBoxStyle}"
               Background="#1E1E1E"
               Foreground="White"
               BorderBrush="#3C3C3C"
               Text="{Binding NewTagText, UpdateSourceTrigger=PropertyChanged}"/>

                            <Button Content="Add"
              Command="{Binding AddTagCommand}"
              Style="{StaticResource PrimaryButtonStyle}"
              Width="60" Height="30"/>
                        </DockPanel>

                        <ItemsControl ItemsSource="{Binding SelectedImage.Tags}" Margin="0,10,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#3A3D41"
                  CornerRadius="16"
                  Margin="4,4,0,0"
                  Padding="8,3"
                  VerticalAlignment="Center">
                                        <DockPanel LastChildFill="False">
                                            <TextBlock Text="{Binding Name}"
                         Foreground="White"
                         VerticalAlignment="Center"
                         Margin="0,0,4,0"/>
                                            <Button Content="×"
                      Width="20" Height="20"
                      Background="Transparent"
                      Foreground="#CCCCCC"
                      BorderThickness="0"
                      Cursor="Hand"
                      Command="{Binding DataContext.RemoveTagCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                      CommandParameter="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Foreground" Value="#FF5252"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
